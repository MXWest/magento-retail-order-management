<!-- initial phpunit configuration file, that you can modify for your project needs -->
<phpunit cacheTokens="true"
	convertErrorsToExceptions="true"
	convertNoticesToExceptions="true"
	convertWarningsToExceptions="true"
	stopOnError="false"
	stopOnFailure="false"
	stopOnIncomplete="false"
	stopOnSkipped="false"
	strict="true"
	verbose="true"
	timeoutForSmallTests="10"
	bootstrap="app/code/community/EcomDev/PHPUnit/bootstrap.php">
	<listeners>
		<listener file="app/code/community/EcomDev/PHPUnit/Test/Listener.php" class="EcomDev_PHPUnit_Test_Listener" />
	</listeners>
	<testsuite name="Magento Test Suite">
		<file>app/code/community/EcomDev/PHPUnit/Test/Suite.php</file>
	</testsuite>
	<groups>
		<include>
			<group>EbayEnterprise_Address</group>
			<group>EbayEnterprise_CreditCard</group>
			<group>EbayEnterprise_Eb2cCore</group>
			<group>EbayEnterprise_Eb2cCustomerService</group>
			<group>EbayEnterprise_Eb2cFraud</group>
			<group>EbayEnterprise_Eb2cInventory</group>
			<group>EbayEnterprise_Eb2cOrder</group>
			<group>EbayEnterprise_Eb2cPayment</group>
			<group>EbayEnterprise_Eb2cProduct</group>
			<group>EbayEnterprise_Eb2cTax</group>
			<group>EbayEnterprise_Pbridge</group>
		</include>
	</groups>
	<filter>
		<whitelist>
			<!-- Report coverage only for this extension. -->
			<directory suffix=".php">app/code/community/EbayEnterprise/Eb2c*</directory>
			<directory suffix=".php">app/code/community/EbayEnterprise/Pbridge</directory>
			<directory suffix=".php">app/code/community/EbayEnterprise/CreditCard</directory>
			<directory suffix=".php">app/code/community/EbayEnterprise/Address</directory>
			<exclude>
				<!-- Don't Report coverage for the test cases. -->
				<directory suffix=".php">app/code/community/EbayEnterprise/*/Test</directory>
			</exclude>
		</whitelist>
	</filter>
	<logging>
		<log type="coverage-html" target="var/phpunit/coverage" charset="UTF-8" highlight="true" lowUpperBound="35" highLowerBound="70"/>
		<log type="coverage-clover" target="var/phpunit/coverage.xml"/>
		<log type="junit" target="var/phpunit/junit.xml" logIncompleteSkipped="true"/>
		<log type="tap" target="var/phpunit/testresults.tap"/>
	</logging>
</phpunit>
