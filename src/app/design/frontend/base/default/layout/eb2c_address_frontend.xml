<?xml version="1.0"?>
<layout version="0.1.0">

	<customer_address_form>
		<reference name="head">
			<action method="addCss"><stylesheet>css/validation-suggestions.css</stylesheet></action>
		</reference>
		<reference name="customer_address_edit">
			<action method="setTemplate">
				<template>eb2c_address_frontend/customer/address/edit.phtml</template>
			</action>
			<block type="eb2caddress/suggestions" name="address_validation_suggestions" template="eb2c_address_frontend/customer/address/suggestions.phtml">
				<action method="setAddressFormat"><formatConfig><![CDATA[address_format_address_only]]></formatConfig></action>
			</block>
		</reference>
	</customer_address_form>

	<enterprise_giftregistry_index_edit>
		<reference name="head">
			<action method="addCss"><stylesheet>css/validation-suggestions.css</stylesheet></action>
		</reference>
		<reference name="giftregistry_address_edit">
			<action method="setTemplate">
				<template>eb2c_address_frontend/giftregistry/address/edit.phtml</template>
			</action>
			<block type="eb2caddress/suggestions" name="address_validation_suggestions" template="eb2c_address_frontend/customer/address/suggestions.phtml">
				<action method="setAddressFormat"><formatConfig><![CDATA[address_format_full]]></formatConfig></action>
			</block>
		</reference>
	</enterprise_giftregistry_index_edit>
</layout>