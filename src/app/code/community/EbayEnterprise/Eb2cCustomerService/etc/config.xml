<?xml version="1.0" encoding="utf-8"?>
<config>
	<modules>
		<EbayEnterprise_Eb2cCustomerService>
			<version>1.0.0.22</version>
		</EbayEnterprise_Eb2cCustomerService>
	</modules>
	<global>
		<models>
			<eb2ccsr>
				<class>EbayEnterprise_Eb2cCustomerService_Model</class>
			</eb2ccsr>
			<admin>
				<rewrite>
					<session>EbayEnterprise_Eb2cCustomerService_Overrides_Model_Admin_Session</session>
				</rewrite>
			</admin>
		</models>
		<helpers>
			<eb2ccsr>
				<class>EbayEnterprise_Eb2cCustomerService_Helper</class>
			</eb2ccsr>
		</helpers>
	</global>
	<admin>
		<routers>
			<adminhtml>
				<args>
					<modules>
						<eb2ccsr before="Mage_Adminhtml">EbayEnterprise_Eb2cCustomerService_Adminhtml</eb2ccsr>
					</modules>
				</args>
			</adminhtml>
		</routers>
	</admin>
	<adminhtml>
		<events>
			<controller_action_predispatch>
				<observers>
					<csrlogin_token_auth>
						<class>eb2ccsr/observer</class>
						<method>preDispatchTokenLogin</method>
					</csrlogin_token_auth>
				</observers>
			</controller_action_predispatch>
		</events>
	</adminhtml>
	<default>
		<eb2ccore>
			<customer_service>
				<api>
					<status_handlers>
						<alert_level>silent</alert_level>
						<status>
							<no_response>
								<logger>logWarn</logger>
								<callback>
									<type>helper</type>
									<class>eb2ccore/api_action</class>
									<method>returnEmpty</method>
								</callback>
							</no_response>
							<server_error>
								<logger>logWarn</logger>
								<callback>
									<type>helper</type>
									<class>eb2ccore/api_action</class>
									<method>returnEmpty</method>
								</callback>
							</server_error>
							<client_error>
								<logger>logNotice</logger>
								<callback>
									<type>helper</type>
									<class>eb2ccore/api_action</class>
									<method>returnEmpty</method>
								</callback>
							</client_error>
							<success>
								<logger>logInfo</logger>
								<callback>
									<type>helper</type>
									<class>eb2ccore/api_action</class>
									<method>returnBody</method>
								</callback>
							</success>
						</status>
					</status_handlers>
					<xml_ns>http://schema.gspt.net/token/1.0</xml_ns>
					<xsd>
						<file>Token-Validate-Request-1.0.xsd</file>
					</xsd>
				</api>
			</customer_service>
		</eb2ccore>
	</default>
	<phpunit>
		<suite>
			<modules>
				<EbayEnterprise_Eb2cCustomerService/>
			</modules>
		</suite>
	</phpunit>
</config>