<?xml version="1.0"?>
<config>
	<modules>
		<TrueAction_Eb2c_Tax>
			<version>0.1.0</version>
		</TrueAction_Eb2c_Tax>
	</modules>
	<global>
		<models>
			<eb2ctax>
				<class>TrueAction_Eb2c_Tax_Model</class>
			</eb2ctax>
			<tax>
				<rewrite>
					<calculation>TrueAction_Eb2c_Tax_Overrides_Model_Calculation</calculation>
					<observer>TrueAction_Eb2c_Tax_Overrides_Model_Observer</observer>
				</rewrite>
			</tax>
		</models>
		<helpers>
			<eb2ctax>
				<class>TrueAction_Eb2c_Tax_Helper</class>
			</eb2ctax>
			<tax>
				<rewrite>
					<data>TrueAction_Eb2c_Tax_Overrides_Helper_Data</data>
				</rewrite>
			</tax>
		</helpers>
		<events>
            <sales_quote_add_item>
                <observers>
                    <tax>
                        <class>tax/observer</class>
                        <method>salesEventItemAdded</method>
                    </tax>
                </observers>
            </sales_quote_add_item>
            <checkout_cart_product_update_after>
                <observers>
                    <tax>
                        <class>tax/observer</class>
                        <method>cartEventProductUpdated</method>
                    </tax>
                </observers>
            </checkout_cart_product_update_after>
            <sales_quote_remove_item>
                <observers>
                    <tax>
                        <class>tax/observer</class>
                        <method>salesEventItemRemoved</method>
                    </tax>
                </observers>
            </sales_quote_remove_item>
        </events>
	</global>
	<default>
		<eb2ctax>
			<api>
				<namespace_uri>
					<![CDATA[http://api.gsicommerce.com/schema/checkout/1.0]]>
				</namespace_uri>
				<version>v1.10</version>
				<region>na</region>
			</api>
		</eb2ctax>
	</default>
	<phpunit>
		<suite>
			<modules>
				<TrueAction_Eb2c_Tax />
			</modules>
		</suite>
	</phpunit>
</config>
