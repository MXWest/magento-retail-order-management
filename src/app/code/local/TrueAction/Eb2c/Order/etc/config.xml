<?xml version="1.0"?>
<config>
	<modules>
		<TrueAction_Eb2c_Tax>
			<version>0.1.0</version>
		</TrueAction_Eb2c_Tax>
	</modules>
	<global>
		<models>
			<eb2corder>
				<class>TrueAction_Eb2c_Order_Model</class>
			</eb2corder>
		</models>
		<helpers>
			<order>
				<class>TrueAction_Eb2c_Order_Helper</class>
			</order>
		</helpers>
	</global>
	<frontend>
		<events>
			<checkout_type_onepage_save_order_after>
				<observers>
					<createrequest_observer>
						<type>singleton</type>
						<class>TrueAction_Eb2c_Inventory_Model_CreateRequest</class>
						<method>observerRealTimeCreate</method>
					</createrequest_observer>
				</observers>
			</checkout_type_onepage_save_order_after>
		</events>
	</frontend>
	<default>
		<eb2c>
			<order>
				<developer_mode>1</developer_mode>
				<create_request_uri>
					http://ENV-RR.virtubox.net/VM.m/stores/STOREID/order/create.format
				</create_request_uri>
				<cancel_request_uri>
					http://ENV-RR.virtubox.net/VM.m/stores/STOREID/order/cancel.format
				</cancel_request_uri>
			</order>
		</eb2c>
	</default>
	<phpunit>
		<suite>
			<modules>
				<TrueAction_Eb2c_Order />
			</modules>
		</suite>
	</phpunit>
</config>
