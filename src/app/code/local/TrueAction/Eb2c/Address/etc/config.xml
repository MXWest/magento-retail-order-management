<?xml version="1.0"?>
<config>
	<modules>
		<TrueAction_Eb2c_Address>
			<version>0.1</version>
		</TrueAction_Eb2c_Address>
	</modules>
	<global>
		<models>
			<eb2caddress>
				<class>TrueAction_Eb2c_Address_Model</class>
			</eb2caddress>
		</models>
		<helpers>
			<eb2caddress>
				<class>TrueAction_Eb2c_Address_Helper</class>
			</eb2caddress>
		</helpers>
		<blocks>
			<eb2caddress>
				<class>TrueAction_Eb2c_Address_Block</class>
			</eb2caddress>
		</blocks>
	</global>
	<default>
		<eb2caddress>
			<general>
				<max_suggestions>3</max_suggestions>
			</general>
			<api>
				<namespace_uri><![CDATA[http://api.gsicommerce.com/schema/checkout/1.0]]></namespace_uri>
			</api>
			<address_suggestion_templates>
				<html>{{if street1}}{{var street1}}&lt;br /&gt;{{/if}}
{{depend street2}}{{var street2}}&lt;br /&gt;{{/depend}}
{{depend street3}}{{var street3}}&lt;br /&gt;{{/depend}}
{{depend street4}}{{var street4}}&lt;br /&gt;{{/depend}}
{{if city}}{{var city}},  {{/if}}{{if region}}{{var region}}, {{/if}}{{if postcode}}{{var postcode}}{{/if}}</html>
			</address_suggestion_templates>
		</eb2caddress>
	</default>
	<phpunit>
		<suite>
			<modules>
				<TrueAction_Eb2c_Address />
			</modules>
		</suite>
	</phpunit>
</config>