<?xml version="1.0"?>
<config>
	<modules>
		<TrueAction_Eb2c_AddressFrontend>
			<version>0.1</version>
		</TrueAction_Eb2c_AddressFrontend>
	</modules>
	<global>
		<blocks>
			<customer>
				<rewrite>
					<address_edit>TrueAction_Eb2c_AddressFrontend_Block_Override_Customer_Address_Edit</address_edit>
				</rewrite>
			</customer>
			<eb2caddressfrontend>
				<class>TrueAction_Eb2c_Address_Block</class>
			</eb2caddressfrontend>
		</blocks>
	</global>
	<frontend>
		<layout>
			<updates>
				<eb2caddressfrontend>
					<file>eb2c_address_frontend.xml</file>
				</eb2caddressfrontend>
			</updates>
		</layout>
	</frontend>
	<default>
		<eb2caddressfrontend>
			<address_suggestion_templates>
				<html>{{if street1}}{{var street1}}&lt;br /&gt;{{/if}}
{{depend street2}}{{var street2}}&lt;br /&gt;{{/depend}}
{{depend street3}}{{var street3}}&lt;br /&gt;{{/depend}}
{{depend street4}}{{var street4}}&lt;br /&gt;{{/depend}}
{{if city}}{{var city}},  {{/if}}{{if region}}{{var region}}, {{/if}}{{if postcode}}{{var postcode}}{{/if}}</html>
			</address_suggestion_templates>
		</eb2caddressfrontend>
	</default>
	<phpunit>
		<suite>
			<modules>
				<TrueAction_Eb2c_AddressFrontend />
			</modules>
		</suite>
	</phpunit>
</config>